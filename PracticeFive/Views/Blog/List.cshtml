@model IEnumerable<PracticeFive.Models.tBlog>

@{
    ViewBag.Title = "List";
}

<script src="js/bootstrap.min.js"></script>
<h2>Index</h2>

@if (Session["UserID"] == null)
{
    <p>@Html.ActionLink("張貼文章", "Login", "Home")</p>
}
else
{
    <p>
        @Html.ActionLink("張貼文章", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created_At)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tMember.MemberName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_At)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tMember.MemberName)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.BlogID }) |
                @Html.ActionLink("詳細內容", "Details", new { id = item.BlogID }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.BlogID }) |
                @Html.ActionLink("收藏", "follow", new { id = item.BlogID })
            </td>
        </tr>
    }

</table>

<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        <ul>
            @foreach (var item in Model)
            {
                <li class="a-row-data">
                    <div class="row">
                        <div class="col-md-1">
                        </div>
                        <div class="text-box row col-md-3 align-items-center">
                            <h3 class="title">
                                @Html.DisplayFor(modelItem => item.BlogCategory)
                            </h3>
                        </div>
                        <div class="text-box col-md-8">
                            <h3 class="title">
                                @Html.DisplayFor(modelItem => item.BlogTitle)
                            </h3>
                            <div>
                                <p>
                                    @Html.DisplayFor(modelItem => item.BlogContent)
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Created_At)
                                    </p>
                                </div>
                                <div class="col-md-7">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.tMember.MemberName)
                                    </p>
                                </div>
                            </div>
                            <div>
                                @Html.ActionLink("修改", "Edit", new { id = item.BlogID }) |
                                @Html.ActionLink("詳細內容", "Details", new { id = item.BlogID }) |
                                @Html.ActionLink("刪除", "Delete", new { id = item.BlogID }) |
                                @Html.ActionLink("收藏", "follow", new { id = item.BlogID })
                            </div>                           
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-1">
    </div>
</div>

<style>
    .a-row-data {
        border-bottom: solid;
        border-bottom-color: gainsboro;
        margin-bottom: 10px;
        padding-bottom: 10px;
    }
    ul{list-style: none;}
</style>
